<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    tools:context=".FirstStartActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/app_logo"
        android:contentDescription="アプリのロゴ"
        />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="アプリ名 (仮)"
        android:textSize="36sp"
        android:textColor="#39A3F7"
        android:fontFamily="sans-serif-light"
        />

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="へ ようこそ！"
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="あああああああああああああああああああああああああああああああああああああああああああああああああああああああああああ"
        android:textColor="#333333"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tutorial_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="まずは簡単なチュートリアルを\nやってみましょう！"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="16sp"
        />


    <Button
        android:id="@+id/start_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="はじめる"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        app:backgroundTint="@null"
        />

</LinearLayout>